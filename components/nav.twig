<nav>
    <ul>
        {% for item in navItems %}
            <li>
                <a href="{{ item.url }}">{{ item.title }}</a>

                {% if item.children is defined and item.children %}
                    <ul>
                        {% for child in item.children %}
                            <li><a href="{{ child.url }}">{{ child.title }}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav>